<%= plan.try(:carrier_profile).try(:legal_name) %>
<% unless plan.try(:name).nil? %>
    <h3><%= plan.try(:name) %></h3>
<% end %>

<ul class="list-unstyled list-comp">
  <li><h5>Subscriber ID:  <em><%= hbx_enrollment.try(:subscriber).try(:id).try(:to_s) %></em></h5></li>
  <li><h5>Group Id:       <em><%= hbx_enrollment.try(:benefit_group_id).try(:to_s) %></em></h5></li>
</ul>
<hr>

<table class="table">
  <thead>
    <tr>
      <th>TYPE</th>
      <th>LEVEL</th>
      <th>START</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= plan.try(:plan_type).try(:upcase) %></td>
      <% plan_level = plan.try(:metal_level).try(:humanize) %>
      <td class="<%= plan_level.try(:downcase) %>"><%= plan_level %></td>
      <td><%= hbx_enrollment.try(:effective_on) %></td>
      <td></td>
    </tr>
  </tbody>
</table>
