<div id="broker_agency_form" class="container">
<%= form_for @organization, as: :organization, url: {action: "create"} do |f| %>
<%= render 'shared/error_messages', :object => @organization %>
  <div class="row">
    <%= render "person_info_fields", f: f %><br>
    <div class="row">
      <div class="col-md-9 col-sm-9 col-xs-12">
        <h4>Broker Agency Information</h4>
        <div class="row no-buffer row-form-wrapper">
          <%= render "shared/organizations/entity_name_and_type_fields", f: f, entity_kinds: Organization::ENTITY_KINDS[0..3] %>
        </div>
        <div class="row no-buffer row-form-wrapper">
          <div class="col-sm-6 col-xs-12 form-group form-group-lg no-pd">
            <%= f.text_field :corporate_npn, class: "floatlabel form-control npn_field interaction-field-control-broker-corporate-npn", placeholder: 'CORPORATE NPN' %>
          </div>
          <div class="col-sm-6 col-xs-12 form-group form-group-lg no-pd">
            <%= f.text_field :home_page, class: "floatlabel form-control interaction-field-control-broker-home-page", placeholder: 'WEBSITE URL' %>
          </div>
        </div>
        <div class="row no-buffer row-form-wrapper">
          <%= render "shared/broker_agency_profile_fields", f: f%>
        </div><br>
        <div class="action-group">
          <%= render "shared/office_locations", f: f %>
          <div class="row no-buffer">
            <button type="submit" class="btn btn-primary pull-right create_broker_agency_btn interaction-click-control-create-broker-agency">Create Broker Agency</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

