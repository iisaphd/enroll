<div id="phone_info" class="focus_effect row personaol-info-row">
  <div class="phone col-md-12 col-sm-12 col-xs-12 no-pd first">

    <%= f.fields_for :phones, errors: {}, fieldset: true do |phone|  %>
      <% if((phone.index == 0) || (phone.index == 2)) %>
        <div class="row <%= (phone.index < 2) ? 'top-row' : 'bottom-row' %>">
      <% end %>
    <div class="col-md-6 col-sm-6 no-pd">
      <div class="form-group form-group-lg">
        
        <% kind = phone.object.kind.upcase %>
        <% if kind == 'HOME' %>
          <% required = "required" %>
        <% end %>

        <%= phone.hidden_field :kind %>
        <%= phone.text_field :full_phone_number, placeholder: "#{kind}", class: "textfield floatlabel phone_number form-control #{required}" %>
      </div>
    </div>
    <% if((phone.index == 1) || (phone.index == 3)) %>
        </div>
      <% end %>
    <% end%>

    <%= render 'shared/error_warning' %>
  </div>
</div>