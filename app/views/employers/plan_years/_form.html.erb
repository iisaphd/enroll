  <div class="container top-pd" id='plan_year'>
      <div class="row">
        <div class="col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <% if @plan_year.errors.any? %>
            <div class="alert-plan-year alert-error">
              <% if @just_a_warning == false %>
              <h4><%= pluralize(@plan_year.errors.count, "error") %> prohibited this plan year from being saved:</h4>
              <% end %>
              <ul>
                <% @plan_year.errors.delete(:benefit_groups) %>
                <% @plan_year.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>

                <% @plan_year.benefit_groups.each do |bg| %>
                  <% bg.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  <% bg.relationship_benefits.each do |rb| %>
                    <% rb.errors.full_messages.each do |rb_msg| %>
                      <li><%= rb_msg %></li>
                    <% end %>
                  <% end %>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= render "shared/plan_year_fields", f: f %>
          <h3>Benefit Groups</h3>

          <!-- Popover Tests -->
          <div class="row row row-form-wrapper row-form-wrapper-top no-buffer">
            <div class="col-md-6 col-sm-6 col-xs-12 form-group form-group-lg no-pd">
                <%= text_field_tag 'text_title', nil, class: "floatlabel form-control", placeholder: 'TEST FIELD' %>
                <%= hbx_poh(title: 'Text Field Popover', content: 'Test Field Popover content that triggers on hover.', trigger: 'hover') %>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12 form-group form-group-lg no-pd">
              <select>
                <option>Select Option</option>
                <option>Option 1</option>
                <option>Option 2</option>
              </select>
              <%= hbx_poh(title: 'Selectbox Popover', content: 'Select Box Popover that triggers on mouse click.') %>
            </div>
          </div>

            <!-- <div class="col-md-12">
              <div class="inner-addon right-addon">
                  <input type="text" class="form-control" />
                  <button type="button" class="button-click" data-toggle="popover" title="Popover title" data-content="And here's some amazing content. It's very engaging. Right?">
                    <i class="glyphicon glyphicon-info-sign"></i>
                  </button>
              </div>
            </div>
          </div> -->
          <!-- ************* -->


          <div class='form-inputs'>
            <a href="#" data-href="<%= search_reference_plan_employers_employer_profile_plan_years_path %>" id='search_reference_plan_link' style='display:none;'></a>
            <%= f.fields_for :benefit_groups, errors: {}, fieldset: false do |bg|  %>
              <%= render "shared/benefit_group_fields", f: bg %><br>
            <% end %>
            <%= link_to_add_fields "Add Benefit Group", f, :benefit_groups, 'btn btn-transparent pull-left xs_full_width' %>
            <div class="row no-buffer">
              <button type="submit" class="btn btn-primary pull-right xs_full_width">Create Plan Year</button>
            </div>
          </div>
      </div>
    </div>
  </div><br>
