<div class="mainmenu">
  <div class="container">
    <ul role="tablist" class="list-unstyled list-inline" id="myTab">
      <li class="active" role="presentation">
          <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, :id=>@employer_profile.id),
          "aria-expanded" => "true", "role" => "tab", :class => 'hidden-xs' ) do %> 
            <span class="glyphicon glyphicon-home" aria-hidden="true" title="Home"></span>
          <%- end %>
          
          <%= link_to(employers_employer_profile_path(:employer_profile_id=>@employer_profile.id, :id=>@employer_profile.id),
          "aria-expanded" => "true", "role" => "tab", :class=> 'visible-xs') do %> 
            <span class="glyphicon glyphicon-home" aria-hidden="true" title="Home"></span>
            <small>Home</small>
        
          <%-end%> 
      </li>

      <li role="presentation">
          
         <%= link_to(employers_employer_profile_show_profile_path(:employer_profile_id=>@employer_profile.id, :tab=>'profile'), :remote => true,
          "aria-expanded" => "true", "role" => "tab" ) do %> 
            <span class="visible-xs">
              <span class="glyphicon glyphicon-user" title="Profile"></span>
              <small>Profile</small>
            </span>

            <span class="hidden-xs">Profile</span>
        <%- end %>
      </li>

       <li role="presentation">
          <%= link_to(employers_employer_profile_show_profile_path(:employer_profile_id=>@employer_profile.id, :tab=>'benefits'), :remote => true,
          "aria-expanded" => "true", "role" => "tab" ) do %> 
            <span class="visible-xs">
              <span class="glyphicon glyphicon-list-alt" title="Benefits"></span>
              <small>Benefits</small>
            </span>

            <span class="hidden-xs">Benefits</span>
        <%- end %>
      </li>
      <li role="presentation">
           <%= link_to(employers_employer_profile_show_profile_path(:employer_profile_id=>@employer_profile.id, :tab=>'employees'), :remote => true,
          "aria-expanded" => "true", "role" => "tab" ) do %> 
                <span class="visible-xs">
              <span class="glyphicon glyphicon-duplicate" title="Employees"></span>
              <small>Employees</small>
            </span>

            <span class="hidden-xs">Employees</span>
        <%- end %>
      </li>

      <% if current_user.try(:has_broker_agency_staff_role?)%>
        <li role="presentation">
            <%= link_to(employers_employer_profile_show_profile_path(:employer_profile_id=>@employer_profile.id, :tab=>'families'), :remote => true,
            "aria-expanded" => "true", "role" => "tab" ) do %>
              <span class="visible-xs">
                <span class="glyphicon glyphicon-duplicate" title="Families"></span>
                <small>Families</small>
              </span>
              <span class="hidden-xs">Families</span>
          <%- end %>
        </li>
      <% end %>

     <% unless current_user.try(:has_broker_agency_staff_role?)%>
        <li role="presentation">
            <%= link_to(active_broker_employers_employer_profile_broker_agency_index_path(:employer_profile_id=>@employer_profile.id), :remote => true,
            "aria-expanded" => "true", "role" => "tab" ) do %>
              <span class="visible-xs">
                <span class="glyphicon glyphicon-duplicate" title="Broker Agency"></span>
                <small>Broker Agency</small>
              </span>

              <span class="hidden-xs">Broker Agency</span>
          <%- end %>
        </li>
      <% end %>
      <li role="presentation">
          <%= link_to(employers_employer_profile_show_profile_path(:employer_profile_id=>@employer_profile.id, :tab=>'documents'), :remote => true,
          "aria-expanded" => "true", "role" => "tab" ) do %> 
            <span class="visible-xs">
              <span class="glyphicon glyphicon-duplicate" title="Documents"></span>
              <small>Documents</small>
            </span>
            <span class="hidden-xs">Documents</span>
        <%- end %>  
      </li>

      <% unless current_user.try(:has_broker_agency_staff_role?)%>
        <li role="presentation">
          <%= link_to(inbox_employers_employer_profiles_path(id: @employer_profile.id), :remote => true, class: 'hidden-xs', "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab", "data-toggle" => "tab", 'id'=>'inbox-tab' ) do  %>
            <span class="badge message-unread"><%= @employer_profile.inbox.unread_messages.try(:count) || 0 %></span>
            Inbox
          <% end %>
          <%= link_to(inbox_employers_employer_profiles_path(id: @employer_profile.id), :remote => true, class: 'visible-xs', "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab" ) do  %>
            <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
            <small>Inbox</small>
          <% end %>
        </li>
      <% end %>  
