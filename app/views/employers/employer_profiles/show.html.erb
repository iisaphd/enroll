<div class="col-md-10 col-sm-12">
  <h3><%= @employer_profile.legal_name %></h3>
    <div class="col-md-offset-1">
        <% @employer_profile.organization.office_locations.each do |loc| %>
          <address>
            <%= loc.address.to_html %>
            <%= loc.phone.to_s %>
          </address>
        <% end %>
    </div>
        <dl class="dl-horizontal">
          <dt>FEIN</dt>
          <dd><%= number_to_obscured_fein @employer_profile.fein %></dd>
          <dt>Entity Kind</dt>
          <dd><%= @employer_profile.entity_kind.to_s.titleize %></dd>
        </dl>
        <h4>Plan Year <%= @current_plan_year.start_on.to_date.year %></h4>
        <dl class="dl-horizontal">
          <dt>FTE/PTE/MSP Count</dt>
          <dd>
            <%= @current_plan_year.fte_count %> /
            <%= @current_plan_year.pte_count %> /
            <%= @current_plan_year.msp_count %> 
          </dd>
          <dt>Open Enroll Start/End</dt>
            <dd>
              <%= format_date @current_plan_year.open_enrollment_start_on %> / 
              <%= format_date @current_plan_year.open_enrollment_end_on %>
            </dd>
          <dt>Plan Year Start/End</dt>
          <dd>
            <%= format_date @current_plan_year.start_on %> / 
            <%= format_date @current_plan_year.end_on %>
          </dd>
        </dl>
        <h4>Benefit Groups</h4>
        <% @benefit_groups.each do |bg| %>
          <dl class="dl-horizontal">
            <dt>Title</dt>
            <dd><%= bg.title %> </dd>
            <dt>Coverage Effective</dt>
            <dd><%= "#{bg.effective_on_kind.humanize} after #{bg.effective_on_offset} days from date of hire" %></dd>
            <dt>Coverage Termination</dt>
            <dd><%= "#{bg.terminate_on_kind.humanize} following last day of employment" %> </dd>
            <dt>Ref Plan/Metal Level</dt>
            <dd><%= "#{bg.reference_plan.name} / #{bg.reference_plan.metal_level.titleize}" %></dd>
         </dl>
          <h5>Employer Contributions</h5>
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Employee Relationship</th>
                <th>Employer Contribution Pct</th>
                <th>Employer Max</th>
              </tr>
            </thead>
            <tbody>
              <% bg.relationship_benefits.each do |rb| %>
                <tr>
                  <td><%= rb.relationship.humanize %></td>
                  <td><%= number_to_percentage rb.premium_pct, precision: 0 %></td>
                  <td><%= rb.employer_max_amt %></td>
                 </tr>
              <% end %>
            </tbody>
          </table>

        <% end %>

        <%= link_to "Add Employer Census Family", new_employers_employer_profile_family_path(@employer_profile), class: "btn btn-primary" %> &nbsp;&nbsp;

        <h3>Employer Roster </h3>
          <table class="table table-condensed">
            <thead>
          <tr>
            <th> Employee Name </th>
            <th> DOB </th>
            <th> Hire Date </th>
            <th>  </th>
          </tr>
            </thead>
            <tbody>

        <% @employer_profile.employee_families.each do |family| %>
          <tr>
            <td> <%= link_to name_to_listing(family.census_employee), employers_employer_profile_family_path(@employer_profile.id, family.id) %> </td>
            <td> <%= format_date family.census_employee.dob %> </td>
            <td> <%= format_date family.census_employee.hired_on %> </td>
            <td> <%= link_to "Delete", employers_employer_profile_family_path(@employer_profile.id, family.id), confirm: "Are you sure you want to delete this family?", method: :delete %> </td>
          </tr>
        <% end %>
            </tbody>
          </table>
  
        <hr/>
        <%= link_to "Back", employers_employer_profiles_path %> &nbsp;&nbsp;
        <%= link_to 'Destroy',  @employers_employer_profile,  method: :delete, confirm: 'Are you sure?' %>



  </div>