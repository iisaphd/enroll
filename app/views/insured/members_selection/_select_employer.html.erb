<div id="employer-selection" class='row no-buffer'>
  <h3><%= l10n("employer").pluralize(@organizer.person.active_employee_roles.size)%></h3>
  <div class="n-radio-group">
    <% @organizer.person.active_employee_roles.each_with_index do |employee_role, index| %>
      <div class="n-radio-row">
        <label class="n-radio">
          <% dental_benefits = is_eligible_for_dental?(employee_role, @organizer.change_plan, @organizer.hbx_enrollment, effective_date) %>
          <%= radio_button_tag 'employee_role_id', employee_role.id, is_employer_checked?(employee_role), id: "employee_role_id_#{employee_role.id}", dental_benefits: dental_benefits %>
          <%= employee_role.census_employee.employer_profile.legal_name.capitalize %>
        </label>
      </div>
    <% end %>
  </div>
</div>
